{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "esnext",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {},
    "pretty": true,
    "lib": ["es2015", "es2016", "es2017", "esnext", "dom"],
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
